<link rel="stylesheet" href="/css/homeStyle.css">

<h1>Hello</h1>

 <section id="post-section">

    <!-- checking if user is logged in  -->
    <% if (locals.user) { %>

        <!-- form to get user data -->
        <form action="/post/create" id="post-feed" method="post">
            <textarea name="content" cols="30" rows="3" placeholder="Type here..."></textarea>
            <input type="submit" value="Post">
        </form>


        <!-- to display posts -->
        <div id="post_container">

            <ul>

                <!-- displaying all the posts -->
                <% for (post of posts) { %>

                    <li>
                        <!-- showing delete button only when the authorized person logged in  -->
                        <% if (locals.user && locals.user.id == post.user.id) { %>

                            <!-- to delete a post -->
                            <a href="/post/destroy/<%= post.id %>">X</a>

                        <% } %>
                        <p>
                            <!-- content of post -->
                            <%= post.content %>
                        </p>

                        <p>
                            <!-- user who posted -->
                            <%= post.user.name %>
                        </p>


                        <!-- for comments on a post -->
                        <div class="post-comments">


                            <!-- input section for writing a comment -->
                            <% if (locals.user) { %>

                                <form action="/comment/create" method="post">
                                    <input type="text" name="content" placeholder="Add Comment...">
                                    <input type="hidden" name="post" value="<%= post._id %>">
                                    <input type="submit" value="Add Comment">
                                </form>

                            <% } %>


                            <!-- list of comments on a post -->
                            <div class="comment-list">

                                <ul>

                                    <!-- iterating over the list of comments on a post -->
                                    <% for (comment of post.comments) { %>

                                        <li>
                                            <p>
                                                <!-- content of the comment -->
                                                <%= comment.content %>
                                            </p>

                                            <p>
                                                <!-- user who commented  -->
                                                <%= comment.user.name %>
                                            </p>
                                        </li>

                                     <% } %>   
                                </ul>

                            </div>

                        </div>

                    </li>
                
                <% } %>
                
            </ul>

        </div>

    <% } %>

    
 </section>